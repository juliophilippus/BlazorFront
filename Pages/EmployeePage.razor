@page "/employeepage"

<h3 class="text-center" style="font-weight:bold;">LIST EMPLOYEES</h3>
<br>

<a href="addemployee" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Add Employee">
    <span class="oi oi-plus" aria-hidden="true"></span> Add Employee
</a>

<br><br>

@if (Employees == null)
{
    <div class="spinner"></div>
}
else
{
    @* Card Employees *@
    <div class="card-deck">
        @foreach (var emp in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
                <div class="card-header">
                    <h3 class="text-center">@emp.FirstName @emp.LastName</h3>
                    @if (@emp.Gender == 0)
                    {
                        @* <img class="card-img-top imageThumbnail" src="@emp.PhotoPath" /> *@
                        <img class="card-img-top imageThumbnail" src="images/male.jpg" />
                    }
                    else
                    {
                        <img class="card-img-top imageThumbnail" src="images/female.jpg" />
                    }
                          
                    <div class="card-footer text-center">
                        <a href="@($"employeedetail/{emp.EmployeeId}")" class="btn btn-success m-1" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Detail">
                            <span class="oi oi-eye" aria-hidden="true"> Detail</span>
                        </a>

                        <a href="employeepage" class="btn btn-danger m-1" data-bs-toggle="tooltip" data-bs-placement="top"
                    title="Delete">
                            <span class="oi oi-trash" aria-hidden="true"> Delete</span>
                        </a>

                        <a href="@($"editemployee/{emp.EmployeeId}")" class="btn btn-warning m-1" data-bs-toggle="tooltip" data-bs-placement="top"
                    title="Edit">
                            <span class="oi oi-cog" aria-hidden="true"> Edit</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    @* Card Employees *@
}
