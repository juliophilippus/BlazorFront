@page "/departmentpage"

<h3 class="text-center" style="font-weight:bold;">LIST DEPARTMENTS</h3>
<br>

  <a href="departmentpage" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Add Department">
    <span class="oi oi-plus" aria-hidden="true"></span> Add Department
  </a>

<br><br>

@* Tabel Department *@
<table class="table table-striped table-hover">

  <thead>
    <tr>
        <th>Department Id</th>
        <th>Department Name</th>
        <th>Action</th>
    </tr>
  </thead>

  <tbody>
    @foreach(var dept in Departments){
        <tr>
            <td>@dept.DepartmentId</td>
            <td>@dept.DepartmentName</td>
            <td>
              
              <a href="@($"departmentdetail/{dept.DepartmentId}")" class="btn btn-success" data-bs-toggle="tooltip" data-bs-placement="top" title="Detail">
                <span class="oi oi-eye" aria-hidden="true"></span>
              </a>

              <a href="departmentpage" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                <span class="oi oi-trash" aria-hidden="true"></span>
              </a>

              <a href="departmentpage" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                <span class="oi oi-cog" aria-hidden="true"></span>
              </a>

            </td>
        </tr>
    }
  </tbody>

</table>
@* Tabel Department *@